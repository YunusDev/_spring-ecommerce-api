[Unit]
Description=Spring Boot Ecommerce API
After=syslog.target
After=network.target[Service]
User=username
Type=simple

[Service]
ExecStart=/usr/bin/java -jar /var/www/html/JAVA/_spring-ecommerce-api/target/ecommerce_api-0.0.1-SNAPSHOT.jar
Restart=always

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=spring-ecommerce

[Install]
WantedBy=multi-user.target


server {
        listen 5000;

        server_name 67.205.161.128:5000;

        location / {
             proxy_pass http://67.205.161.128:5000/;
             proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
             proxy_set_header X-Forwarded-Proto $scheme;
             proxy_set_header X-Forwarded-Port $server_port;
        }
}